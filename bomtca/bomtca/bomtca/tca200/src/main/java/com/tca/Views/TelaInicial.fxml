<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #E8F5E9;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.tca.Controllers.TelaInicialController">
    
    <!-- Título -->
    <Label layoutX="150" layoutY="50" style="-fx-font-size: 30px; -fx-text-fill: #2E7D32; -fx-font-weight: bold;" text="Clínica da Bicharada" />

    <!-- Botões -->
    <VBox alignment="CENTER" layoutX="200" layoutY="150" prefWidth="200" spacing="20">
        
        <!-- Botão 1 -->
        <Button fx:id="btnCriarAgendamento" onAction="#CadastrarAgendamentos" prefHeight="50" prefWidth="200" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 50; -fx-border-radius: 50;" text="Criar Agendamento" />
        
        <!-- Botão 2 -->
        <Button fx:id="btnVerAgendamentos" onAction="#VerAgendamentos" prefHeight="50" prefWidth="200" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 50; -fx-border-radius: 50;" text="Ver Agendamentos" />
    </VBox>
</AnchorPane>
